<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nicoruben.controllers.MainController">
    <!-- Top: barra principal -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-color: #8fc4b7;">
            <!-- Imagen a la izquierda -->
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../images/logoTransApp.png" />
                </image>
            </ImageView>

            <!-- Spacer para empujar los botones a la derecha -->
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnClientes" onAction="#handleTopButton" styleClass="success" text="Clientes" />
            <Button fx:id="btnInstructores" onAction="#handleTopButton" styleClass="success" text="Instructores" />

            <!-- Botones a la derecha -->
            <Button fx:id="btnActividades" onAction="#handleTopButton" styleClass="success" text="Clases" />
         <Button fx:id="btnPlanficaciones" onAction="#handleTopButton" styleClass="success" text="Planificaciones" />
            <Button fx:id="btnReservas" onAction="#handleTopButton" styleClass="success" text="Reservas" />
            <Button fx:id="btnInformes" onAction="#handleTopButton" styleClass="success" text="Gráficas" />
         <Button fx:id="btnSalir" onAction="#onClickSalir" styleClass="danger" text="SALIR SESIÓN" />
        </HBox>
    </top>

    <!-- Left: menú lateral dinámico -->
    <left>
        <VBox fx:id="leftMenu" minWidth="200.0" spacing="5" style="-fx-padding: 10; -fx-background-color: #457b7a;">
            <!-- Botones se añadirán dinámicamente -->
        </VBox>
    </left>

    <!-- Center: contenido dinámico -->
    <center>
        <StackPane fx:id="centerPane" style="-fx-background-color: #ffffff; -fx-padding: 10;">
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../images/logoTransApp.png" />
            </image>
         </ImageView>
        </StackPane>
    </center>
</BorderPane>
